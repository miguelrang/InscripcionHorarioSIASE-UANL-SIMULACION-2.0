<Teacher>:
    id: teacher
    name: 'teacher'

    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_x': .5, 'center_y': .5}
        
        MDTabs:
            background_color: (237/255, 162/255, 22/255, .75)
            on_tab_switch: app.root.get_screen('rectory').setTab(False, *args)

            Add:
                id: add
                name: 'add'

                title: 'Agregar'

                FBoxLayout:
                    ScrollView:
                        scroll_type: ["bars", "content"]
                        bar_color: (.9, .9, .9, .9)
                        bar_width: dp(20)
                        do_scroll_y: True
                        
                        MDBoxLayout:
                            orientation: 'vertical'
                            adaptive_height: True
                            spacing: dp(5)

                            FLabel:
                                text: '[b][size=20][color=#05396E]Datos del Profesor[/color][/size][/b]'
                                
                            FLabel:
                                text: '[size=15][color=#EDA216]Las cuentas de rectoria tienen los permisos para agregas mas cuentas de la misma, además de cuentas para profesores, alumnos y agregar horarios.[/color][/size]'
                                
                            FTextField:
                                id: add_middle_name
                                name: 'add_middle_name'

                                hint_text: "Primer Apellido"
                                active: True
                                leng: 30
                            
                            FTextField:
                                id: add_last_name
                                name: 'add_last_name'

                                hint_text: 'Segundo Apellido'
                                active: True
                                leng: 30
                            
                            FTextField:
                                id: add_name
                                name: 'add_name'

                                hint_text: 'Nombre'
                                active: True
                                leng: 50
                            
                            MDGridLayout:
                                cols: 3
                                spacing: dp(3)
                                padding: dp(1), dp(0), dp(1), dp(0)
                                size_hint_y: None
                                size: (self.size[0], 50)

                                FIcon:
                                    id: add_left_faculty
                                    name: 'add_left_faculty'

                                    icon: 'minus'
                                    disabled: True
                                    field: add_faculties
                                    position: 'left'
                                    
                                FSearcher:
                                    id: add_faculties
                                    name: 'add_faculties'

                                    hint_text: 'Facultades'
                                    action: 'faculties'
                                    careers: add_careers
                                    leng: 150    
                                    on_text:
                                        if self.text == '':\
                                        add_left_faculty.disabled, add_right_faculty.disabled = True, True
                                        else:\
                                        add_left_faculty.disabled, add_right_faculty.disabled = False, False
                                FIcon:
                                    id: add_right_faculty
                                    name: 'add_right_faculty'

                                    icon: 'minus'
                                    disabled: True
                                    field: add_faculties
                                    position: 'right'

                            MDGridLayout:
                                cols: 3
                                spacing: dp(3)
                                padding: dp(1), dp(0), dp(1), dp(0)
                                size_hint_y: None
                                size: (self.size[0], 50)

                                FIcon:
                                    id: add_left_career
                                    name: 'add_left_career'

                                    icon: 'minus'
                                    disabled: True
                                    field: add_careers
                                    position: 'left'
            
                                FSearcher:
                                    id: add_careers
                                    name: 'add_careers'

                                    hint_text: 'Carreras'
                                    action: 'careers'
                                    faculties: add_faculties
                                    leng: 240
                                    on_text:
                                        if self.text == '':\
                                        add_left_career.disabled, add_right_career.disabled = True, True
                                        else:\
                                        add_left_career.disabled, add_right_career.disabled = False, False
                                FIcon:
                                    id: add_right_career
                                    name: 'add_right_career'

                                    icon: 'minus'
                                    disabled: True
                                    field: add_careers
                                    position: 'right'
            
                            FTextField:
                                id: add_enrollment
                                name: 'add_enrollment'

                                hint_text: 'Matricula'
                                active: False
                                leng: 10
                            
                            FTextField:
                                id: add_email
                                name: 'add_email'

                                hint_text: 'Correo Universitario'
                                active: False
                                leng: 40
                            
                            FTextField:
                                id: add_pass
                                name: 'add_pass'

                                hint_text: 'Contraseña'
                                active: False
                                leng: 16

                            MDFloatLayout:
                                cols: 1
                                size_hint_y: None
                                size: (self.size[0], 50)
                                FCancelButton:
                                    id: add_cancel
                                    name: 'add_cancel'

                                    text: 'Limpiar'

                                FActionButton:
                                    id: add_save
                                    name: 'add_save'
                                    text: 'Guardar Empleado'
                                    x: add_cancel.x - 5 - self.size[0]
                                
            Update:
                id: upd
                name: 'upd'

                title: 'Actualizar'

                FBoxLayout:
                    ScrollView:
                        scroll_type: ["bars", "content"]
                        bar_color: (.9, .9, .9, .9)
                        bar_width: dp(20)
                        do_scroll_y: True
                        
                        MDBoxLayout:
                            orientation: 'vertical'
                            adaptive_height: True
                            spacing: dp(5)

                            FLabel:
                                text: '[b][size=20][color=#05396E]Datos del Profesor[/color][/size][/b]'
                                
                            FLabel:
                                text: '[size=15][color=#EDA216]Las cuentas de rectoria tienen los permisos para agregas mas cuentas de la misma, además de cuentas para profesores, alumnos y agregar horarios.[/color][/size]'
                                
                            FFinder:
                                id: upd_enrollment
                                name: 'upd_enrollment'

                                hint_text: 'Matricula'                                
                                input_filter: 'int'
                                query: "GetDataTeacher '{}'".format(self.text)
                                widgets: [upd_middle_name,upd_last_name,upd_name,upd_faculties,upd_careers,upd_email,upd_pass]
                                buttons: [upd_cancel, upd_save, upd_left_faculty, upd_left_career, upd_right_faculty, upd_right_career]
                                
                            FTextField:
                                id: upd_middle_name
                                name: 'upd_middle_name'

                                hint_text: "Primer Apellido"
                                disabled: True
                                active: True
                                leng: 30
                            
                            FTextField:
                                id: upd_last_name
                                name: 'upd_last_name'

                                hint_text: 'Segundo Apellido'
                                disabled: True
                                active: True
                                leng: 30
                            
                            FTextField:
                                id: upd_name
                                name: 'upd_name'

                                hint_text: 'Nombre'
                                disabled: True
                                active: True
                                leng: 50
                            
                            MDGridLayout:
                                cols: 3
                                spacing: dp(3)
                                padding: dp(1), dp(0), dp(1), dp(0)
                                size_hint_y: None
                                size: (self.size[0], 50)

                                FIcon:
                                    id: upd_left_faculty
                                    name: 'upd_left_faculty'

                                    icon: 'minus'
                                    disabled: True
                                    field: upd_faculties
                                    position: 'left'
                                    
                                FSearcher:
                                    id: upd_faculties
                                    name: 'upd_faculties'

                                    hint_text: 'Facultades'
                                    disabled: True
                                    action: 'faculties'
                                    careers: add_careers
                                    leng: 150    
                                    on_text:
                                        if self.text == '':\
                                        upd_left_faculty.disabled, upd_right_faculty.disabled = True, True
                                        else:\
                                        upd_left_faculty.disabled, upd_right_faculty.disabled = False, False
                                FIcon:
                                    id: upd_right_faculty
                                    name: 'upd_right_faculty'

                                    icon: 'minus'
                                    disabled: True
                                    field: upd_faculties
                                    position: 'right'
                                    
                            MDGridLayout:
                                cols: 3
                                spacing: dp(3)
                                padding: dp(1), dp(0), dp(1), dp(0)
                                size_hint_y: None
                                size: (self.size[0], 50)

                                FIcon:
                                    id: upd_left_career
                                    name: 'upd_left_career'

                                    icon: 'minus'
                                    disabled: True
                                    field: upd_careers
                                    position: 'left'
            
                                FSearcher:
                                    id: upd_careers
                                    name: 'upd_careers'

                                    hint_text: 'Carreras'
                                    disabled: True
                                    action: 'careers'
                                    faculties: upd_faculties
                                    leng: 240
                                
                                FIcon:
                                    id: upd_right_career
                                    name: 'upd_right_career'

                                    icon: 'minus'
                                    disabled: True
                                    field: upd_careers
                                    position: 'right'

                            FTextField:
                                id: upd_email
                                name: 'upd_email'

                                hint_text: 'Correo Universitario'
                                disabled: True
                                active: False
                                leng: 40
                            
                            FTextField:
                                id: upd_pass
                                name: 'upd_pass'

                                hint_text: 'Contraseña'
                                disabled: True
                                active: True
                                leng: 16

                            MDFloatLayout:
                                cols: 1
                                size_hint_y: None
                                size: (self.size[0], 50)
                                FCancelButton:
                                    id: upd_cancel
                                    name: 'upd_cancel'

                                    text: 'Limpiar'
                                    disabled: True

                                FActionButton:
                                    id: upd_save
                                    name: 'upd_save'

                                    text: 'Guardar Modificaciones'
                                    disabled: True
                                    x: upd_cancel.x - 5 - self.size[0]
                
            Delete:
                id: del
                name: 'del'

                title: 'Eliminar'

                FBoxLayout:
                    ScrollView:
                        scroll_type: ["bars", "content"]
                        bar_color: (.9, .9, .9, .9)
                        bar_width: dp(20)
                        do_scroll_y: True
                        
                        MDBoxLayout:
                            orientation: 'vertical'
                            adaptive_height: True
                            spacing: dp(5)

                            FLabel:
                                text: '[b][size=20][color=#05396E]Datos del Profesor[/color][/size][/b]'
                                
                            FLabel:
                                text: '[size=15][color=#EDA216]Las cuentas de rectoria tienen los permisos para agregas mas cuentas de la misma, además de cuentas para profesores, alumnos y agregar horarios.[/color][/size]'
                                
                            FFinder:
                                id: del_enrollment
                                name: 'del_enrollment'

                                hint_text: 'Matricula'
                                input_filter: 'int'
                                query: "GetDataTeacher '{}'".format(self.text)
                                widgets: [del_middle_name,del_last_name,del_name,del_faculties,del_careers,del_email,del_pass]
                                buttons: [del_cancel, del_save]
                                
                            FTextField:
                                id: del_middle_name
                                name: 'del_middle_name'

                                hint_text: "Primer Apellido"
                                disabled: True
                                active: True
                                leng: 30
                            
                            FTextField:
                                id: del_last_name
                                name: 'del_last_name'

                                hint_text: 'Segundo Apellido'
                                disabled: True
                                active: True
                                leng: 30
                            
                            FTextField:
                                id: del_name
                                name: 'del_name'

                                hint_text: 'Nombre'
                                disabled: True
                                active: True
                                leng: 50
                            
                            FSearcher:
                                id: del_faculties
                                name: 'del_faculties'

                                hint_text: 'Facultades'
                                disabled: True
                                leng: 150
                            
                            FSearcher:
                                id: del_careers
                                name: 'del_careers'

                                hint_text: 'Carreras'
                                disabled: True
                                leng: 240

                            FTextField:
                                id: del_email
                                name: 'del_email'

                                hint_text: 'Correo Universitario'
                                disabled: True
                                active: False
                                leng: 40
                            
                            FTextField:
                                id: del_pass
                                name: 'del_pass'

                                hint_text: 'Contraseña'
                                disabled: True
                                active: False
                                leng: 16

                            MDFloatLayout:
                                cols: 1
                                size_hint_y: None
                                size: (self.size[0], 50)
                                FCancelButton:
                                    id: del_cancel
                                    name: 'del_cancel'

                                    text: 'Limpiar'
                                    disabled: True

                                FActionButton:
                                    id: del_save
                                    name: 'del_save'

                                    text: 'Guardar Modificaciones'
                                    disabled: True
                                    x: upd_cancel.x - 5 - self.size[0]