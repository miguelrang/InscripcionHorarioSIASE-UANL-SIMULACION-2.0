<Schedule>:
    id: schedule
    name: 'schedule'

    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_x': .5, 'center_y': .5}
        
        MDTabs:
            background_color: (237/255, 162/255, 22/255, .75)
            on_tab_switch: app.root.get_screen('rectory').setTab(False, *args)

            Add:
                id: add
                name: 'add'

                title: 'Agregar'

                FBoxLayout:
                    ScrollView:
                        scroll_type: ["bars"]
                        bar_color: (.9, .9, .9, .9)
                        bar_width: dp(20)
                        do_scroll_y: True
                    
                        MDBoxLayout:
                            orientation: 'vertical'
                            adaptive_height: True
                            spacing: dp(5)
                    
                            FLabel:
                                text: '[b][size=20][color=#05396E]Datos del Horario[/color][/size][/b]'
                                
                            FLabel:
                                text: '[size=15][color=#EDA216]Las cuentas de rectoria tienen los permisos para agregas mas cuentas de la misma, además de cuentas para profesores, alumnos y agregar horarios.[/color][/size]'
                                
                            FSearcher:
                                id: add_faculty
                                name: 'add_faculty'

                                hint_text: "Facultad"
                                leng: 50
                            
                            FSearcher:
                                id: add_classroom
                                name: 'add_classroom'

                                hint_text: 'Nombre del Aula (Ej. (1): 201, (2): Laboratorio)'
                                leng: 100
                            
                            FSearcher:
                                id: add_subject
                                name: 'add_subject'

                                hint_text: 'Materia'
                                leng: 100
                            
                            FSearcher:
                                id: add_teacher
                                name: 'add_teacher'

                                hint_text: 'Nombre del Profesor'
                                leng: 110
                            
                            FSearcher:
                                id: add_schedule
                                name: 'add_schedule'

                                hint_text: 'Horario'
                                leng: 130
                            
                            FTextField:
                                id: add_group
                                name: 'add_group'

                                hint_text: 'Grupo'
                                leng: 3

                            MDFloatLayout:
                                cols: 1
                                size_hint_y: None
                                size: (self.size[0], 50)
                                FCancelButton:
                                    id: add_cancel
                                    name: 'add_cancel'

                                    text: 'Limpiar'

                                FActionButton:
                                    id: add_save
                                    name: 'add_save'
                                    text: 'Guardar Empleado'
                                    x: add_cancel.x - 5 - self.size[0]
                                
            Update:
                id: upd
                name: 'upd'

                title: 'Actualizar'

