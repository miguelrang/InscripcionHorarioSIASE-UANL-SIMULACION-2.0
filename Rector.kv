<Rector>:
    id: rector
    name: 'rector'

    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_x': .5, 'center_y': .5}
        
        MDTabs:
            background_color: (237/255, 162/255, 22/255, .75)
            on_tab_switch: app.root.get_screen('rectory').setTab(False, *args)

            Add:
                id: add
                name: 'add'

                title: 'Agregar'

                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint: (.35, .95)
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    padding: dp(11), dp(0), dp(11), dp(5)
                    spacing: dp(5)
                    
                    canvas.before:
                        Color:
                            rgba: (1, 1, 1, 1)
                        
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                        
                        Color:
                            rgba: (.5, .5, .5, 1)
                        
                        Line:
                            rounded_rectangle: [self.pos[0], self.pos[1], self.size[0], self.size[1], 10, 10, 10, 10]
                            width: 1.5
                        
                        Color:
                            rgba: (237/255, 162/255, 22/255, .5)
                        
                        Line:
                            rounded_rectangle: [self.pos[0], self.pos[1], self.size[0], self.size[1], 10, 10, 10, 10]

                    MDLabel:
                        text: '[b][size=20][color=#05396E]Datos del Empleado[/color][/size][/b]'
                        markup: True
                        halign: 'left'
                        valign: 'center'
                        size_hint_y: None
                        size: (self.size[0], 50)
                    
                    MDLabel:
                        text: '[size=15][color=#EDA216]Las cuentas de rectoria tienen los permisos para agregas mas cuentas de la misma, adem치s de cuentas para profesores, alumnos y agregar horarios.[/color][/size]'
                        markup: True
                        halign: 'justify' #['left', 'center', 'right', 'justify', 'auto']
                        valign: 'center'
                        size_hint_y: None
                        size: (self.size[0], 60)

                    FTextField:
                        id: add_middle_name
                        name: 'add_middle_name'

                        hint_text: "Primer Apellido"
                        active: True
                        leng: 30
                    
                    FTextField:
                        id: add_last_name
                        name: 'add_last_name'

                        hint_text: 'Segundo Apellido'
                        active: True
                        leng: 30
                    
                    FTextField:
                        id: add_name
                        name: 'add_name'

                        hint_text: 'Nombre'
                        active: True
                        leng: 50
                    
                    FTextField:
                        id: add_enrollment
                        name: 'add_enrollment'

                        hint_text: 'Matricula'
                        active: False
                        leng: 10
                    
                    FTextField:
                        id: add_email
                        name: 'add_email'

                        hint_text: 'Correo Universitario'
                        active: False
                        leng: 40
                    
                    FTextField:
                        id: add_pass
                        name: 'add_pass'

                        hint_text: 'Contrase침a'
                        active: False
                        leng: 16

                    MDFloatLayout:
                        cols: 1
                        size_hint_y: None
                        size: (self.size[0], 50)
                        FCancelButton:
                            id: add_cancel
                            name: 'add_cancel'

                            text: 'Limpiar'

                        FActionButton:
                            id: add_save
                            name: 'add_save'
                            text: 'Guardar Empleado'
                            x: add_cancel.x - 5 - self.size[0]
                        
