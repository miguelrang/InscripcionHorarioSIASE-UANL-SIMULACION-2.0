<Rector>:
    id: rector
    name: 'rector'

    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_x': .5, 'center_y': .5}
        
        MDTabs:
            background_color: (237/255, 162/255, 22/255, .75)
            on_tab_switch: app.root.get_screen('rectory').setTab(False, *args)

            Add:
                id: add
                name: 'add'

                title: 'Agregar'

                FBoxLayout:
                    spacing: dp(5)
                    
                    FLabel:
                        text: '[b][size=20][color=#05396E]Datos del Empleado[/color][/size][/b]'
                        
                    FLabel:
                        text: '[size=15][color=#EDA216]Las cuentas de rectoria tienen los permisos para agregas mas cuentas de la misma, además de cuentas para profesores, alumnos y agregar horarios.[/color][/size]'
                        
                    FTextField:
                        id: add_middle_name
                        name: 'add_middle_name'

                        hint_text: "Primer Apellido"
                        active: True
                        leng: 30
                    
                    FTextField:
                        id: add_last_name
                        name: 'add_last_name'

                        hint_text: 'Segundo Apellido'
                        active: True
                        leng: 30
                    
                    FTextField:
                        id: add_name
                        name: 'add_name'

                        hint_text: 'Nombre'
                        active: True
                        leng: 50
                    
                    FTextField:
                        id: add_enrollment
                        name: 'add_enrollment'

                        hint_text: 'Matricula'
                        active: False
                        leng: 10
                    
                    FTextField:
                        id: add_email
                        name: 'add_email'

                        hint_text: 'Correo Universitario'
                        active: False
                        leng: 40
                    
                    FTextField:
                        id: add_pass
                        name: 'add_pass'

                        hint_text: 'Contraseña'
                        active: False
                        leng: 16
                    
                    MDFloatLayout:
                        cols: 1
                        size_hint_y: None
                        size: (self.size[0], 50)
                        FCancelButton:
                            id: add_cancel
                            name: 'add_cancel'

                            text: 'Limpiar'

                        FActionButton:
                            id: add_save
                            name: 'add_save'
                            text: 'Guardar Empleado'
                            x: add_cancel.x - 5 - self.size[0]
                        
            Update:
                id: upd
                name: 'upd'

                title: 'Actualizar'

                FBoxLayout:
                    spacing: dp(5)
                    
                    FLabel:
                        text: '[b][size=20][color=#05396E]Datos del Empleado[/color][/size][/b]'
                        
                    FLabel:
                        text: '[size=15][color=#EDA216]Las cuentas de rectoria tienen los permisos para agregas mas cuentas de la misma, además de cuentas para profesores, alumnos y agregar horarios.[/color][/size]'
                        
                    FFinder:
                        id: upd_enrollment
                        name: 'upd_enrollment'

                        hint_text: 'Matricula'
                        input_filter: 'int'
                        query: "GetDataEmployee '{}'".format(self.text)
                        widgets: [upd_middle_name,upd_last_name,upd_name,upd_email,upd_pass]
                        buttons: [upd_cancel, upd_save]
                        
                    FTextField:
                        id: upd_middle_name
                        name: 'upd_middle_name'

                        hint_text: "Primer Apellido"
                        disabled: True
                        active: True
                        leng: 30
                    
                    FTextField:
                        id: upd_last_name
                        name: 'upd_last_name'

                        hint_text: 'Segundo Apellido'
                        disabled: True
                        active: True
                        leng: 30
                    
                    FTextField:
                        id: upd_name
                        name: 'upd_name'

                        hint_text: 'Nombre'
                        disabled: True
                        active: True
                        leng: 50
                    
                    FTextField:
                        id: upd_email
                        name: 'upd_email'

                        hint_text: 'Correo Universitario'
                        disabled: True
                        active: False
                        leng: 40
                    
                    FTextField:
                        id: upd_pass
                        name: 'upd_pass'

                        hint_text: 'Contraseña'
                        disabled: True
                        active: True
                        leng: 16

                    MDFloatLayout:
                        cols: 1
                        size_hint_y: None
                        size: (self.size[0], 50)
                        FCancelButton:
                            id: upd_cancel
                            name: 'upd_cancel'

                            text: 'Limpiar'
                            disabled: True

                        FActionButton:
                            id: upd_save
                            name: 'upd_save'

                            text: 'Guardar Modificaciones'
                            disabled: True
                            x: upd_cancel.x - 5 - self.size[0]
        
            Delete:
                id: del
                name: 'del'

                title: 'Eliminar'

                FBoxLayout:
                    spacing: dp(5)
                    
                    FLabel:
                        text: '[b][size=20][color=#05396E]Datos del Empleado[/color][/size][/b]'
                        
                    FLabel:
                        text: '[size=15][color=#EDA216]Las cuentas de rectoria tienen los permisos para agregas mas cuentas de la misma, además de cuentas para profesores, alumnos y agregar horarios.[/color][/size]'
                        
                    FFinder:
                        id: del_enrollment
                        name: 'del_enrollment'

                        hint_text: 'Matricula'
                        input_filter: 'int'
                        query: "GetDataEmployee '{}'".format(self.text)
                        widgets: [del_middle_name,del_last_name,del_name,del_email,del_pass]
                        buttons: [del_cancel, del_save]
                        
                    FTextField:
                        id: del_middle_name
                        name: 'del_middle_name'

                        hint_text: "Primer Apellido"
                        disabled: True
                        active: True
                        leng: 30
                    
                    FTextField:
                        id: del_last_name
                        name: 'del_last_name'

                        hint_text: 'Segundo Apellido'
                        disabled: True
                        active: True
                        leng: 30
                    
                    FTextField:
                        id: del_name
                        name: 'del_name'

                        hint_text: 'Nombre'
                        disabled: True
                        active: True
                        leng: 50
                    
                    FTextField:
                        id: del_email
                        name: 'del_email'

                        hint_text: 'Correo Universitario'
                        disabled: True
                        active: False
                        leng: 40
                    
                    FTextField:
                        id: del_pass
                        name: 'del_pass'

                        hint_text: 'Contraseña'
                        disabled: True
                        active: False
                        leng: 16

                    MDFloatLayout:
                        cols: 1
                        size_hint_y: None
                        size: (self.size[0], 50)
                        FCancelButton:
                            id: del_cancel
                            name: 'del_cancel'

                            text: 'Limpiar'
                            disabled: True

                        FActionButton:
                            id: del_save
                            name: 'del_save'

                            text: 'Guardar Modificaciones'
                            disabled: True
                            x: upd_cancel.x - 5 - self.size[0]