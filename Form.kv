#: import threading threading
<FBoxLayout>:
    orientation: 'vertical'
    size_hint: (.35, .95)
    pos_hint: {'center_x': .5, 'center_y': .5}
    padding: dp(11), dp(0), dp(11), dp(5)
    
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        
        RoundedRectangle:
            size: self.size
            pos: self.pos
        
        Color:
            rgba: (.5, .5, .5, 1)
        
        Line:
            rounded_rectangle: [self.pos[0], self.pos[1], self.size[0], self.size[1], 10, 10, 10, 10]
            width: 1.5
        
        Color:
            rgba: (237/255, 162/255, 22/255, .5)
        
        Line:
            rounded_rectangle: [self.pos[0], self.pos[1], self.size[0], self.size[1], 10, 10, 10, 10]

<FLabel>:
    markup: True
    halign: 'justify'# ['left', 'center', 'right', 'justify', 'auto']
    valign: 'center'
    size_hint_y: None
    size: (self.size[0], 60)

<FFinder>:
    icon_right: 'magnify'
    current_hint_text_color: (0, 0, 0, 1)
    line_color_normal: (0, 0, 0, 1)
    multiline: False
    
<FTextField>:
    size_hint_y: None
    size: self.size[0], 50
    multiline: False
    line_anim: False
    leng: None
    active: None
    on_text: self.text = root.shortField()
    on_focus:
        if self.focus == True and self.active == False:\
        app.openDialog(title='Atenci√≥n', text='En este campo no se puede editar.')
        
        app.root.get_screen('rectory').text_validate(field=self, text=self.text, leng=self.leng)

<FSearcher>:
    size_hint_y: None
    size: self.size[0], 50
    multiline: False
    line_anim: False
    leng: None

<FKardex>:
    text: "Kardex"
    color: (0, 0, 0, 1)#(237/255, 162/255, 22/255, 1)
    size_hint_y: None
    size: self.size[0], 40
    background_color: (0, 0, 0, 0)
    on_press:
        self.background_color=(.7, .7, .7, 1)
    on_release:
        self.background_color=(0, 0, 0, 0)
        
    canvas.before:
        Color:
            rgba: (237/255, 162/255, 22/255, 1)
        Line:
            rectangle: [self.pos[0]+1, self.pos[1], self.size[0]-2, self.size[1]]
            width: 1.1

<FCancelButton>:
    theme_text_color: "Custom"
    text_color: (81/255, 138/255, 114/255, 1)
    pos_hint: {"top": .95, "right": 1}

<FActionButton>:
    theme_text_color: 'Custom'
    text_color: (1, 1, 1, 1)
    md_bg_color: (81/255, 138/255, 114/255, 1)
    pos_hint: {'top': .95}

