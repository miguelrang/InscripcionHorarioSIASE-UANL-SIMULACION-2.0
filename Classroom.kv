<Classroom>:
    id: classroom
    name: 'classroom'

    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_x': .5, 'center_y': .5}

        MDTabs:
            background_color: (237/255, 162/255, 22/255, .75)
            on_tab_switch: app.root.get_screen('rectory').setTab(False, *args)

            Add:
                id: add
                name: 'add'

                title: 'Agregar'
            
                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint: (.35, .95)
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    padding: dp(1), dp(5), dp(1), dp(5)
                    
                    canvas.before:
                        Color:
                            rgba: (1, 1, 1, 1)
                        
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                        
                        Color:
                            rgba: (.5, .5, .5, 1)
                        
                        Line:
                            rounded_rectangle: [self.pos[0], self.pos[1], self.size[0], self.size[1], 10, 10, 10, 10]
                            width: 1.5
                        
                        Color:
                            rgba: (237/255, 162/255, 22/255, .5)
                        
                        Line:
                            rounded_rectangle: [self.pos[0], self.pos[1], self.size[0], self.size[1], 10, 10, 10, 10]

                    ScrollView:
                        scroll_type: ["bars"]
                        bar_color: (.9, .9, .9, .9)
                        bar_width: dp(20)
                        #padding: dp(5), dp(0) ,dp(0), dp(5)
                        do_scroll_y: True
                        
                        MDBoxLayout:
                            orientation: 'vertical'
                            adaptive_height: True
                            padding: dp(10), dp(0), dp(10), dp(0)
                            spacing: dp(5)

                            MDLabel:
                                text: '[b][size=20][color=#05396E]Salon de Clases[/color][/size][/b]'
                                markup: True
                                halign: 'left'
                                valign: 'center'
                                size_hint_y: None
                                size: (self.size[0], 50)
                            
                            MDLabel:
                                text: '[size=14][color=#EDA216]El aula puede ser tanto un salón común de clases como un laboratorio.[/color][/size]'
                                markup: True
                                halign: 'justify' #['left', 'center', 'right', 'justify', 'auto']
                                valign: 'top'
                                size_hint_y: None
                                size: (self.size[0], 30)
                
                            ROptions:
                                id: add_faculty
                                name: 'add_faculty'

                                hint_text: 'Facultad'
                                
                            RTextField:
                                id: add_classroom
                                name: 'add_classroom'

                                hint_text: 'Salon de Clases'
                                disabled: False
                                when: False
                            
                            RTextField:
                                id: add_banches
                                name: 'add_banches'

                                hint_text: 'Bancos Disponibles'
                                input_filter: 'int'
                                disabled: False
                                when: False
            
            Update:
                id: upd
                name: 'upd'

                title: 'Actualizar'
            
            Delete:
                id: del
                name: 'del'

                title: 'Eliminar'
            
            