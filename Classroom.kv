#: import threading threading
#: import re re
<Classroom>:
    id: classroom
    name: 'classroom'

    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_x': .5, 'center_y': .5}

        MDTabs:
            background_color: (237/255, 162/255, 22/255, .75)
            on_tab_switch: app.root.get_screen('rectory').setTab(False, *args)

            Add:
                id: add
                name: 'add'

                title: 'Agregar'
            
                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint: (.35, .95)
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    padding: dp(1), dp(5), dp(1), dp(5)
                    
                    canvas.before:
                        Color:
                            rgba: (1, 1, 1, 1)
                        
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                        
                        Color:
                            rgba: (.5, .5, .5, 1)
                        
                        Line:
                            rounded_rectangle: [self.pos[0], self.pos[1], self.size[0], self.size[1], 10, 10, 10, 10]
                            width: 1.5
                        
                        Color:
                            rgba: (237/255, 162/255, 22/255, .5)
                        
                        Line:
                            rounded_rectangle: [self.pos[0], self.pos[1], self.size[0], self.size[1], 10, 10, 10, 10]

                    ScrollView:
                        scroll_type: ["bars"]
                        bar_color: (.9, .9, .9, .9)
                        bar_width: dp(20)
                        #padding: dp(5), dp(0) ,dp(0), dp(5)
                        do_scroll_y: True
                        
                        MDBoxLayout:
                            orientation: 'vertical'
                            adaptive_height: True
                            padding: dp(10), dp(0), dp(10), dp(0)
                            spacing: dp(5)

                            MDLabel:
                                text: '[b][size=20][color=#05396E]Salon de Clases[/color][/size][/b]'
                                markup: True
                                halign: 'left'
                                valign: 'center'
                                size_hint_y: None
                                size: (self.size[0], 50)
                            
                            MDLabel:
                                text: '[size=14][color=#EDA216]El aula puede ser tanto un salón común de clases como un laboratorio.[/color][/size]'
                                markup: True
                                halign: 'justify' #['left', 'center', 'right', 'justify', 'auto']
                                valign: 'top'
                                size_hint_y: None
                                size: (self.size[0], 30)
                
                            ROptions:
                                id: add_faculty
                                name: 'add_faculty'

                                hint_text: 'Facultad'
                                
                            RTextField:
                                id: add_classroom
                                name: 'add_classroom'

                                hint_text: 'Salon de Clases'
                                disabled: False
                                when: False
                            
                            RTextField:
                                id: add_banches
                                name: 'add_banches'

                                hint_text: 'Bancos Disponibles'
                                input_filter: 'int'
                                disabled: False
                                when: False
                            
                            MDFloatLayout:
                                cols: 1
                                size_hint_y: None
                                size: (1, 40)

                                RCancelButton:
                                    id: add_cancel
                                    name: 'add_cancel'

                                    text: 'Limpiar'
                                
                                RActionButton:
                                    id: add_save
                                    name: 'add_save'

                                    text: 'Guardar Aula'
                                    x: add_cancel.x - self.size[0] - 10
                                    y: add_cancel.y
            
            Update:
                id: upd
                name: 'upd'

                title: 'Actualizar'

                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint: (.35, .95)
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    spacing: dp(5)
                    padding: dp(11), dp(5), dp(11), dp(5)

                    canvas.before:
                        Color:
                            rgba: (1, 1, 1, 1)
                        
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                        
                        Color:
                            rgba: (.5, .5, .5, 1)
                        
                        Line:
                            rounded_rectangle: [self.pos[0], self.pos[1], self.size[0], self.size[1], 10, 10, 10, 10]
                            width: 1.5
                        
                        Color:
                            rgba: (237/255, 162/255, 22/255, .5)
                        
                        Line:
                            rounded_rectangle: [self.pos[0], self.pos[1], self.size[0], self.size[1], 10, 10, 10, 10]

                    MDLabel:
                        text: '[b][size=20][color=#05396E]Salon de Clases[/color][/size][/b]'
                        markup: True
                        halign: 'left'
                        valign: 'center'
                        size_hint_y: None
                        size: (self.size[0], 50)
                    
                    MDLabel:
                        text: '[size=14][color=#EDA216]El aula puede ser tanto un salón común de clases como un laboratorio.[/color][/size]'
                        markup: True
                        halign: 'justify' #['left', 'center', 'right', 'justify', 'auto']
                        valign: 'top'
                        size_hint_y: None
                        size: (self.size[0], 30)
                    
                    MDGridLayout:
                        cols: 1
                        size_hint_y: None
                        size: (self.size[0], 50)
                        
                        RTextField:
                            id: upd_search
                            name: 'upd_search'

                            hint_text: 'Aula: Nombre_Facultad'
                            multiline: False
                            on_text:
                                self.text = self.text.upper()

                                rectory = app.root.get_screen('rectory')
                                threading.Thread(target=rectory.showClassrooms, args=(self, self.text, upd_id_classroom, upd_classroom, upd_banches, upd_save,)).start()
                            on_focus:
                                rectory = app.root.get_screen('rectory')
                                if self.focus == True:\
                                threading.Thread(target=rectory.setClassrooms, args=(self, app.execute("GetClassrooms"), 'Aulas',)).start()
                                else:\
                                rectory.menu.dismiss()

                    RTextField:
                        id: upd_id_classroom
                        name: 'upd_id_classroom'

                        hint_text: 'ID Aula'
                        input_filter: 'int'
                        disabled: True
                        on_text: None
                        on_focus: None

                    RTextField:
                        id: upd_classroom
                        name: 'upd_classroom'

                        hint_text: 'Aula'
                        input_filter: 'int'
                        disabled: True
                        on_text: None
                        on_focus: None

                    RTextField:
                        id: upd_banches
                        name: 'upd_banches'

                        hint_text: 'Bancos Disponibles'
                        input_filter: 'int'
                        disabled: True
                        on_text: None
                        on_focus: None

                    MDFloatLayout:
                        cols: 1
                        RActionButton:
                            id: upd_save
                            name: 'upd_save'

                            text: 'Modificar Aula'
                            disabled: True
                            pos_hint: {'center_x': .5, 'top': .95}
            Delete:
                id: del
                name: 'del'

                title: 'Eliminar'

                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint: (.35, .95)
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    spacing: dp(5)
                    padding: dp(11), dp(5), dp(11), dp(5)

                    canvas.before:
                        Color:
                            rgba: (1, 1, 1, 1)
                        
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                        
                        Color:
                            rgba: (.5, .5, .5, 1)
                        
                        Line:
                            rounded_rectangle: [self.pos[0], self.pos[1], self.size[0], self.size[1], 10, 10, 10, 10]
                            width: 1.5
                        
                        Color:
                            rgba: (237/255, 162/255, 22/255, .5)
                        
                        Line:
                            rounded_rectangle: [self.pos[0], self.pos[1], self.size[0], self.size[1], 10, 10, 10, 10]

                    MDLabel:
                        text: '[b][size=20][color=#05396E]Salon de Clases[/color][/size][/b]'
                        markup: True
                        halign: 'left'
                        valign: 'center'
                        size_hint_y: None
                        size: (self.size[0], 50)
                    
                    MDLabel:
                        text: '[size=14][color=#EDA216]El aula puede ser tanto un salón común de clases como un laboratorio.[/color][/size]'
                        markup: True
                        halign: 'justify' #['left', 'center', 'right', 'justify', 'auto']
                        valign: 'top'
                        size_hint_y: None
                        size: (self.size[0], 30)
                    
                    MDGridLayout:
                        cols: 1
                        size_hint_y: None
                        size: (self.size[0], 50)
                        
                        RTextField:
                            id: upd_search
                            name: 'upd_search'

                            hint_text: 'Aula: Nombre_Facultad'
                            multiline: False
                            on_text:
                                self.text = self.text.upper()

                                rectory = app.root.get_screen('rectory')
                                threading.Thread(target=rectory.showClassrooms, args=(self, self.text, del_id_classroom, del_classroom, del_banches, del_save,)).start()
                            on_focus:
                                rectory = app.root.get_screen('rectory')
                                if self.focus == True:\
                                threading.Thread(target=rectory.setClassrooms, args=(self, app.execute("GetClassrooms"), 'Aulas',)).start()
                                else:\
                                rectory.menu.dismiss()

                    RTextField:
                        id: del_id_classroom
                        name: 'del_id_classroom'

                        hint_text: 'ID Aula'
                        input_filter: 'int'
                        disabled: True
                        on_text: None
                        on_focus: None

                    RTextField:
                        id: del_classroom
                        name: 'del_classroom'

                        hint_text: 'Aula'
                        input_filter: 'int'
                        disabled: True
                        on_text: None
                        on_focus: None

                    RTextField:
                        id: del_banches
                        name: 'del_banches'

                        hint_text: 'Bancos Disponibles'
                        input_filter: 'int'
                        disabled: True
                        on_text: None
                        on_focus: None

                    MDFloatLayout:
                        cols: 1
                        RActionButton:
                            id: del_save
                            name: 'del_save'

                            text: 'Eliminar Aula'
                            disabled: True
                            pos_hint: {'center_x': .5, 'top': .95}
            
            