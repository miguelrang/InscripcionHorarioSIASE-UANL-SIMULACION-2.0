Rectory:
    id: rectory
    name: 'rectory'

    MDFloatLayout:
        cols: 1
        md_bg_color: (0, 0, 0, 1)
        Image:
            allow_stretch: True
            opacity: .5
            source: "images/wallpaper-rectory.png"

        MDBoxLayout:
            id: layout
            name: 'layout'

            orientation: 'vertical'
            pos_hint: {'center_x': .5, 'center_y': .5}
            MDToolbar:
                id: tool_bar
                name: 'tool_bar'

                title: 'Inscripciones'
                md_bg_color: (237/255, 162/255, 22/255, .5)
                right_action_items: [['exit-to-app', lambda x: root.exit()]]

            MDTabs:
                id: tabs
                name: 'tabs'

                tab_hint_x: True
                pos_hint: {'center_x': .5, 'center_y': .5}
                background_color: (237/255, 162/255, 22/255, .75)
                on_tab_switch: root.setTab(True, *args)

                Rector:
                    id: rector
                    name: 'rector'

                    title: 'Rectoria (empleado)'
                    icon: 'office-building'

                Teacher:
                    id: teacher
                    name: 'teacher'

                    title: 'Profesor'
                    icon: 'teach'
                
                Student:
                    id: student
                    name: 'student'

                    title: 'Estudiante'
                    icon: 'school'
                
                Schedule:
                    id: schedule
                    name: 'schedule'

                    title: 'Horario'
                    icon: 'timetable'
        
        MDLabel:
            id: enrollment
            name: "emrollment"

            text: ""
            font_size: dp(20)
            markup: True
            pos_hint: {"center_y": .7}
            x: 20
        
        MDLabel:
            id: employee
            name: "employee"

            text: ""
            font_size: dp(20)
            markup: True
            y: enrollment.pos[1]-30
            x: 20
        
        MDBanner:
            id: banner
            name: 'banner'

            type: "two-line"
            text: ['', '']
            left_action: ["CANCELAR", lambda x: None]
            over_widget: layout
            vertical_pad: tool_bar.height