<Student>:
    id: student
    name: 'student'

    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_x': .5, 'center_y': .5}

        MDTabs:
            background_color: (237/255, 162/255, 22/255, .75)
            on_tab_switch: app.root.get_screen('rectory').setTab(False, *args)

            Add:
                id: add
                name: 'add'

                title: 'Agregar'
                
                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint: (.35, .95)
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    padding: dp(1), dp(5), dp(1), dp(5)
                    
                    canvas.before:
                        Color:
                            rgba: (1, 1, 1, 1)
                        
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                        
                        Color:
                            rgba: (.5, .5, .5, 1)
                        
                        Line:
                            rounded_rectangle: [self.pos[0], self.pos[1], self.size[0], self.size[1], 10, 10, 10, 10]
                            width: 1.5
                        
                        Color:
                            rgba: (237/255, 162/255, 22/255, .5)
                        
                        Line:
                            rounded_rectangle: [self.pos[0], self.pos[1], self.size[0], self.size[1], 10, 10, 10, 10]

                    ScrollView:
                        scroll_type: ["bars"]
                        bar_color: (.9, .9, .9, .9)
                        bar_width: dp(20)
                        #padding: dp(5), dp(0) ,dp(0), dp(5)
                        do_scroll_y: True
                        
                        MDBoxLayout:
                            orientation: 'vertical'
                            adaptive_height: True
                            padding: dp(10), dp(0), dp(10), dp(0)
                            spacing: dp(5)

                            MDLabel:
                                text: '[b][size=20][color=#05396E]Datos del Estudiante[/color][/size][/b]'
                                markup: True
                                halign: 'left'
                                valign: 'center'
                                size_hint_y: None
                                size: (self.size[0], 50)
                            
                            MDLabel:
                                text: '[size=14][color=#EDA216]Los Alumnos deberán realizar sus horarios en el día asignado por la facultad.[/color][/size]'
                                markup: True
                                halign: 'justify' #['left', 'center', 'right', 'justify', 'auto']
                                valign: 'center'
                                size_hint_y: None
                                size: (self.size[0], 60)

                            RTextField:
                                id: add_middle_name
                                name: 'add_middle_name'

                                hint_text: "Primer Apellido"
                                when: False
                            
                            RTextField:
                                id: add_last_name
                                name: 'add_last_name'

                                hint_text: 'Segundo Apellido'
                                when: False
                            
                            RTextField:
                                id: add_name
                                name: 'add_name'

                                hint_text: 'Nombre'
                                when: False
                            
                            ROptions:
                                id: add_faculty
                                name: 'add_faculty'

                                hint_text: 'Facultades'
                            
                            ROptions:
                                id: add_career
                                name: 'add_career'

                                hint_text: 'Carreras'
                            
                            RKardexButton:
                                id: add_kardex
                                name: 'add_kardex'
                                
                                size_hint_y: None
                                size: (self.size[0], 50)

                            RTextField:
                                id: add_enrollment
                                name: 'add_enrollment'

                                hint_text: 'Matricula'
                                when: True
                            
                            RTextField:
                                id: add_email
                                name: 'add_email'

                                hint_text: 'Correo Universitario'
                                when: True
                            
                            RTextField:
                                id: add_pass
                                name: 'add_pass'

                                hint_text: 'Contraseña'
                                when: True

                            MDFloatLayout:
                                cols: 1
                                size_hint_y: None
                                size: (1, 40)

                                RCancelButton:
                                    id: add_cancel
                                    name: 'add_cancel'
                                    
                                    text: 'Limpiar'

                                RActionButton:
                                    id: add_save
                                    name: 'add_save'

                                    text: 'Guardar Estudiante'
                                    x: add_cancel.x - self.size[0] - 10
                                    y: add_cancel.y
                                
                            MDLabel:
                                size_hint_y: None
                                size: (self.size[0], 20)
                          
